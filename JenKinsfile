pipeline {
    agent any
    tools {
        jdk 'jdk-17'
    }
    environment {
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64/'
        DOCKER_TAG = getVersion()
    }
    stages {
        stage ('Clone Stage') {
            steps {
                git'https://github.com/MenyarAdali/Astonvilla.git'
            }
        }
      
    }
}

def getVersion() {
    return sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
}

